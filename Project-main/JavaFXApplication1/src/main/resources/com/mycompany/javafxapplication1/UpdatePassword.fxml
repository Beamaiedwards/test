<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxapplication1.UpdatePasswordController">
    <children>
        <Label text="Update Password" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="100.0" />
                <ColumnConstraints prefWidth="200.0" />
            </columnConstraints>
            <children>
                <Label text="Old Password" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <PasswordField fx:id="oldPasswordField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="New Password" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <PasswordField fx:id="newPasswordField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Label text="Confirm Password" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        <Button text="Update Password" fx:id="updatePasswordBtn" onAction="#handleUpdatePassword" />
        <Button text="Cancel" fx:id="cancelBtn" onAction="#handleCancel" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
